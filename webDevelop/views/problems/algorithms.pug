extends ../layout

block content 
  .row
    .col-md-9.col-md-offset-1
      .panel.panel-default
        table.table.table-striped
          thead
            tr
              th #
              th Title
              th Difficulty
          tbody
            each chunk in chunks
              each algorithms in chunk
                tr
                  td.thclass1= algorithms.index
                  td.thclass2 
                    a(href= '/problems/tackle-view/' + algorithms._id)= algorithms.title
                  td.thclass3= algorithms.difficulty
        .panel-footer
          nav(aria-label='Page navigation')
            ul.pagination
              if pagenumber != 1
                li
                  a(href='/problems/algorithms/' + (Number(pagenumber) - 1), aria-label='Previous')
                    span(aria-hidden='true') «
              - for (var i = 1; i <= pages; i++){
                if pagenumber == i
                  li.active
                    a(href='/problems/algorithms/' + i)= i
                else
                  li
                    a(href='/problems/algorithms/' + i)= i
              - }
              if pagenumber != pages
                li
                  a(href='/problems/algorithms/' + (Number(pagenumber) + 1), aria-label='Next')
                    span(aria-hidden='true') »
 
  